<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Listing Researches</h3>
  <table class="table table-hover">

    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @researches.each do |research| %>
        <tr>
          <td><%= research.title %></td>
          <td><%= research.description %></td>
          <td><%= link_to 'Show', research %></td>
          <td><%= link_to 'Edit', edit_research_path(research) %></td>
          <td><%= link_to 'Destroy', research, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'New Research', new_research_path %>
  </button>
</div>