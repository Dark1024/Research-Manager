<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Listing Articles</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Research</th>
        <th>Commet</th>
        <th>Indexes</th>
        <th>Link</th>
        <th>Applied</th>
        <th>Ammount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.name %></td>
          <td><%= article.research.title %></td>
          <td><%= article.commet %></td>
          <td><%= article.indexes %></td>
          <td><%= article.link %></td>
          <td><%= article.applied %></td>
          <td><%= article.ammount %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
  <button type="button" class="btn btn-default">
    <%= link_to 'New Article', new_article_path %>
  </button>
</div>