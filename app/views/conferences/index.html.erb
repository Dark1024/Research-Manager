<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Listing Conferences</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Place</th>
        <th>Sponsor</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @conferences.each do |conference| %>
        <tr>
          <td><%= conference.name %></td>
          <td><%= conference.place %></td>
          <td><%= conference.sponsor %></td>
          <td><%= conference.date %></td>
          <td><%= link_to 'Show', conference %></td>
          <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
          <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'New Conference', new_conference_path %>
  </button>
</div>