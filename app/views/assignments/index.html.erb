<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Listing Assignments</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Research</th>
        <th>Researcher</th>
        <th>Type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @assignments.each do |assignment| %>
        <tr>
          <td><%= assignment.research.title %></td>
          <td><%= assignment.researcher.name %></td>
          <td><%= assignment.type.name %></td>
          <td><%= link_to 'Show', assignment %></td>
          <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
          <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'New Assignment', new_assignment_path %>
  </button>
</div>