<p id="notice"><%= notice %></p>

<h1>Listing Researchers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Office phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @researchers.each do |researcher| %>
      <tr>
        <td><%= researcher.first_name %></td>
        <td><%= researcher.last_name %></td>
        <td><%= researcher.email %></td>
        <td><%= researcher.phone %></td>
        <td><%= researcher.office_phone %></td>
        <td><%= link_to 'Show', researcher %></td>
        <td><%= link_to 'Edit', edit_researcher_path(researcher) %></td>
        <td><%= link_to 'Destroy', researcher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

