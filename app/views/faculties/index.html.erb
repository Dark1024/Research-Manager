<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Listing Faculties</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>University</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @faculties.each do |faculty| %>
        <tr>
          <td><%= faculty.name %></td>
          <td><%= faculty.description %></td>
          <td><%= faculty.university.name %></td>
          <td><%= link_to 'Show', faculty %></td>
          <td><%= link_to 'Edit', edit_faculty_path(faculty) %></td>
          <td><%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'New Faculty', new_faculty_path %>
  </button>
</div>