<p id="notice"><%= notice %></p>

<div class="container">
  <h3>Listing Journals</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Link</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @journals.each do |journal| %>
        <tr>
          <td><%= journal.name %></td>
          <td><%= journal.company %></td>
          <td><%= journal.link %></td>
          <td><%= link_to 'Show', journal %></td>
          <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
          <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button type="button" class="btn btn-default">
    <%= link_to 'New Journal', new_journal_path %>
  </button>
</div>